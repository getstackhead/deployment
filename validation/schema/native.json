{
  "definitions": {
    "native-capability": {
      "propertyNames": {
        "pattern": "^php$"
      },
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "version": {}
          },
          "required": ["version"]
        }
      }
    }
  },
  "properties": {
    "domains": {
      "type": "array",
      "items": {
        "required": ["public_path"],
        "properties": {
          "public_path": {
            "type": "string"
          }
        }
      }
    },
    "native": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "capabilities": {
          "type": "object",
          "$ref": "#/definitions/native-capability"
        }
      }
    }
  }
}