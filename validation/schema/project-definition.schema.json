{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Definition",
  "description": "Project definition file required by StackHead",
  "type": "object",
  "required": ["type", "domains"],
  "properties": {
    "type": {
      "type": "string",
      "enum": [ "container", "native" ]
    },
    "domains": {
      "type": "array",
      "items": {
        "description": "Domain configuration",
        "required": ["domain"],
        "properties": {
          "domain": {
            "type": "string",
            "description": "Domain name without protocols or slashes"
          },
          "security": {
            "type": "object",
            "$ref": "security.json"
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {"properties": {"type": {"const": "native"}}},
      "then": {
        "type": "object",
        "$ref": "native.json"
      }
    },
    {
      "if": {"properties": {"type": {"const": "container"}}},
      "then": {
        "type": "object",
        "$ref": "container.json"
      }
    }
  ]
}