#!/usr/bin/env sh
CHALLENGE_FOLDER={{ stackhead__acme_folder }}/{{ app_config.domains[0].domain }}
mkdir -p "$CHALLENGE_FOLDER"

if [ $# -ne 5 ]
then
  echo "Command expects exactly 5 arguments."
  exit 1
fi

if [ "$1" = "present" ]
then
  echo "$5" > "$CHALLENGE_FOLDER/$4"
elif [ "$1" = "cleanup" ]
then
  rm "$CHALLENGE_FOLDER/$4"
fi